<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="vnl.sheeprombeta.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/teClause"
            android:layout_below="@+id/textView" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:id="@+id/bSearch"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="∫"
            android:id="@+id/bIntegrantion"
            android:layout_gravity="center_horizontal"
            android:layout_column="0"
            android:capitalize="none"
            android:clickable="false"
            android:contentDescription="int("
            android:textSize="13dp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="∂y/∂x"
            android:id="@+id/bDerivation"
            android:layout_column="0"
            android:capitalize="none"
            android:clickable="false"
            android:contentDescription="d/dx"
            android:textSize="13dp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="lim"
            android:id="@+id/bLim"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:capitalize="none"
            android:clickable="false"
            android:contentDescription="limx->"
            android:textSize="13dp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="pow"
            android:id="@+id/bPow"
            android:layout_column="2"
            android:capitalize="none"
            android:clickable="false"
            android:contentDescription="^2"
            android:textSize="13dp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="℮"
            android:id="@+id/bExp"
            android:layout_column="1"
            android:capitalize="none"
            android:clickable="false"
            android:contentDescription="exp("
            android:textSize="13dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="ln"
            android:id="@+id/bLog"
            android:layout_column="2"
            android:capitalize="none"
            android:clickable="false"
            android:contentDescription="log"
            android:textSize="13dp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="1/x"
            android:id="@+id/bInv"
            android:layout_column="2"
            android:capitalize="none"
            android:clickable="false"
            android:contentDescription="^-1"
            android:textSize="13dp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="cos"
            android:id="@+id/bCos"
            android:layout_column="2"
            android:capitalize="none"
            android:clickable="false"
            android:contentDescription="cos("
            android:textSize="13dp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="sin"
            android:id="@+id/bSin"
            android:layout_column="3"
            android:capitalize="none"
            android:clickable="false"
            android:contentDescription="sin("
            android:textSize="13dp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="tan"
            android:id="@+id/bTan"
            android:layout_column="2"
            android:capitalize="none"
            android:clickable="false"
            android:contentDescription="tan("
            android:textSize="13dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer"
        android:id="@+id/tvAnswer"
        android:layout_below="@+id/teClause"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_marginTop="32dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        style = "?android:attr/progressBarStyleLarge"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:indeterminate="false" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView"
        android:layout_weight="0.92"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:backgroundTint="#000000"/>

</LinearLayout>
